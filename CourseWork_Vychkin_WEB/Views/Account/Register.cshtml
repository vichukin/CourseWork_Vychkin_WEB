@{
}
<div class="position-relative" style="height: 80vh">
    <div class="position-absolute top-50 start-50 translate-middle" style="width:35%">
        <form asp-action="Register" enctype="multipart/form-data" method="post">
            <h1 class="h3 mb-3 fw-normal">Please register</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden asp-for="ReturnUrl" />
            <div class="form-floating">
                <input type="text" asp-for="DisplayName" class="form-control" id="floatingDisplayName" placeholder="Display name" >
                <label asp-for="DisplayName" for="floatingDisplayName"></label>
            </div>
            <div class="form-floating">
                <input type="text" asp-for="Login" class="form-control" id="floatingLogin" placeholder="Login" >
                <label asp-for="Login" for="floatingLogin"></label>
            </div>
            <div class="form-floating">
                <input type="email" asp-for="Email" class="form-control" id="floatingEmail" placeholder="Email">
                <label asp-for="Email" for="floatingEmail"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                <label asp-for="Password" for="floatingPassword"></label>
            </div>
            <div class="form-floating">
                <input asp-for="ConfirmPassword" type="password" class="form-control" id="floatingConfPassword" placeholder="ConfirmPassword">
                <label asp-for="ConfirmPassword" for="floatingConfPassword"></label>
            </div>
            <div >
                <label asp-for="Avatar" class="form-label"></label>
                <input asp-for="Avatar" type="file" class="form-control">
            </div>
            <button class="btn btn-success w-100 py-2" type="submit">Register</button>
            <div class="d-flex w-100 mt-2">
                <a class="btn btn-primary w-50" asp-action="SignIn" asp-controller="Account" asp-route-ReturnUrl="@Model.ReturnUrl">Sign in</a>
                <a class="btn ms-auto" asp-controller="Account" style="width: 12%; height: 80%" asp-action="GoogleAuth" asp-route-ReturnUrl="@Model.ReturnUrl"><img class="w-100" src="https://coursework.blob.core.windows.net/otherimages/google64.png" /></a>
            </div>
        </form>
    </div>

</div>

