<div class="position-relative" style="height: 80vh">
    <div class="position-absolute top-50 start-50 translate-middle" style="width:35%">
         <form asp-action="SignIn" method="post">
    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden asp-for="ReturnUrl" />
    <div class="form-floating">
      <input type="text" asp-for="Login" class="form-control" id="floatingInput" placeholder="name@example.com">
        <label asp-for="Login" for="floatingInput"></label>
    </div>
    <div class="form-floating">
        <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
        <label asp-for="Password" for="floatingPassword"></label>
    </div>

    <div class="form-check text-start my-3">
      <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
                <label class="form-check-label pe-auto" for="flexCheckDefault">
        Remember me
      </label>
    </div>
    <button class="btn btn-success w-100 py-2" type="submit">Sign in</button>
    <div class="d-flex w-100 mt-2">
        <a class="btn btn-primary w-50" asp-action="Register" asp-controller="Account" asp-route-ReturnUrl="@Model.ReturnUrl">Register</a>
        <a class="btn ms-auto" asp-controller="Account" style="width: 12%; height: 80%" asp-action="GoogleAuth" asp-route-ReturnUrl="@Model.ReturnUrl"><img class="w-100"  src="https://coursework.blob.core.windows.net/otherimages/google64.png" /></a>
    </div>
  </form>
    </div>
   
</div>
