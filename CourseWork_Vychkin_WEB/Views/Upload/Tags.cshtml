@model (CreateHouseVM ,List<Tag>)
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    int count = 0;
}
<div class="row" >
    <div class="col-3"></div>
    <div class="col-6 mt-5">
        <div class="container">
            <div class="row">
                <h1>What best describes your place</h1>

            </div>
            <div class="d-flex flex-wrap" style="overflow-y: auto; margin-bottom:20vh; max-height: 50vh;"  >


                @foreach (var item in Model.Item2)
                {

                    <div class="w-25 p-1">
                        <input form="MyForm" type="checkbox" class="btn-check" name="Tags[]" value="@item.Id" id="option(@count)" autocomplete="off">
                        <label class="btn w-100 mt-3" for="option(@count)" style="background-color: rgb(245,245,245)">
                                 <div>
                                 <img class="w-75" style="height: 10vh" src="@item.ImagePath">
                                <p class="m-0 fs-6 ">@item.Name</p>
                                 </div>
                                 </label>
                    </div>
                    count++;
                }
            </div>
        </div>
    </div>

    <div class="col-3"></div>
</div>
<div class="w-100">
    <div class="d-flex" style="height:10vh;position:absolute; left:0px; bottom:9vh;width:100vw; background-color:antiquewhite;">
        <div class="" style="left: 88vw;width:8vw;top:2.5vh; min-width:50px; position: relative;">
            <form id="MyForm" asp-action="Index" asp-controller="Upload" method="post">
                <input hidden name="Category" value="@Model.Item1.Category" />
                <button class="btn btn-dark text-white w-100">Next</button>
            </form>
        </div>
        <div class="" style="right:5vw;width:8vw;top:2.5vh; min-width:50px; position: relative;">
            <form asp-action="Index" asp-controller="Upload" method="post">
                <button class="p-0  text-decoration-underline fs-4 text-dark w-100" style="background-color:rgba(255,255,255,0); border:0px;">Go Back</button>
            </form>
        </div>
    </div>
</div>

